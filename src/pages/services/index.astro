---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Services from '~/components/widgets/Services.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Steps from '~/components/widgets/Steps.astro';

const metadata = {
  title: 'Expert Excavation & Landscaping Services | Legacy Exteriors Windsor',
  description: 'Professional excavation, drainage solutions, landscaping, and driveway services in Windsor-Essex. Trusted contractor since 2022. Quality workmanship guaranteed.',
  openGraph: {
    type: 'website',
    locale: 'en_CA',
    url: 'https://legacyexteriorsinc.com/services',
    siteName: 'Legacy Exteriors',
    title: 'Professional Excavation & Landscaping Services | Legacy Exteriors',
    description: 'Comprehensive excavation, landscaping, and property improvement services in Windsor-Essex. Expert solutions for residential and commercial projects.',
    images: [
      {
        url: '~/assets/images/services/excavation/excavation-services-main.png',
        width: 1200,
        height: 630,
        alt: 'Legacy Exteriors - Professional Excavation & Landscaping Services',
      },
    ],
  },
  canonical: 'https://legacyexteriorsin.com/services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="Professional Services"
    title="Comprehensive Excavation & Property Services"
    subtitle="Legacy Exteriors delivers expert excavation, landscaping, and property improvement solutions throughout Windsor-Essex. From residential projects to commercial developments, we transform properties with precision, expertise, and dedication to quality."
    actions={[
      {
        variant: 'primary',
        text: 'Get Your Free Estimate',
        href: '/contact',
        icon: 'tabler:message',
      },
      { text: 'Explore Services', href: '#services' },
    ]}
    image={{
      src: '~/assets/images/services/landscaping/landscaping-service-main.png',
      alt: 'Legacy Exteriors professional services',
    }}
  />

  <!-- Services Widget ************** -->
  <Services
    id="services"
    tagline="Our Expertise"
    title="Professional Excavation & Landscaping Services"
    subtitle="From foundation excavation to landscape design, we provide comprehensive solutions that transform properties with precision and care."
    columns={3}
    highlight={true}
    services={[
      {
        title: 'Expert Excavation',
        description:
          'Full-service excavation solutions for residential and commercial projects. Our skilled operators handle site preparation, foundation digging, grading, and land clearing with precision equipment.',
        image: '~/assets/images/services/excavation/excavation-services-main.png',
        icon: 'tabler:bulldozer',
        callToAction: {
          text: 'Explore Excavation',
          href: '/services/excavation',
          icon: 'tabler:arrow-right',
        },
      },
      {
        title: 'Precision Trenching',
        description:
          'Professional trenching services for utility lines, irrigation systems, and drainage installations. We ensure accurate depth and grade while minimizing disruption to your existing landscape.',
        image: '~/assets/images/services/trenching/trenching-services-main.png',
        icon: 'tabler:line-dashed',
        callToAction: {
          text: 'Explore Trenching',
          href: '/services/trenching',
          icon: 'tabler:arrow-right',
        },
      },
      {
        title: 'Drainage Solutions',
        description:
          'Comprehensive drainage systems tailored to protect your property. We design and install French drains, catch basins, swales, and complete water management solutions.',
        image: '~/assets/images/services/drainage/drainage-service-main.png',
        icon: 'tabler:droplet',
        callToAction: {
          text: 'Explore Drainage',
          href: '/services/drainage',
          icon: 'tabler:arrow-right',
        },
      },
      {
        title: 'Driveway Construction',
        description:
          'Premium driveway installation and renovation services. From excavation to finishing, we work with concrete, asphalt, and interlocking pavers to create durable, attractive entrances.',
        image: '~/assets/images/services/driveways/driveway-service-main.png',
        icon: 'tabler:road',
        callToAction: {
          text: 'Explore Driveways',
          href: '/services/driveways',
          icon: 'tabler:arrow-right',
        },
      },
      {
        title: 'Professional Landscaping',
        description:
          'Transform your outdoor space with our complete landscape design and installation services. We create harmonious environments using quality plants, trees, and hardscape elements.',
        image: '~/assets/images/services/landscaping/landscaping-service-main.png',
        icon: 'tabler:plant',
        callToAction: {
          text: 'Explore Landscaping',
          href: '/services/landscaping',
          icon: 'tabler:arrow-right',
        },
      },
      {
        title: 'Sod Installation',
        description:
          'Achieve an instant, lush lawn with our professional sod installation service. We handle proper soil preparation, premium sod selection, and provide maintenance guidance for lasting results.',
        image: '~/assets/images/services/sod/sod-service-main.png',
        icon: 'tabler:garden-cart',
        callToAction: {
          text: 'Explore Sod',
          href: '/services/sod',
          icon: 'tabler:arrow-right',
        },
      },
    ]}
  />

  <!-- Features Widget ************** -->
  <Features3
    id="features"
    tagline="Our Advantage"
    title="Why Choose Legacy Exteriors"
    subtitle="We deliver exceptional quality, reliability, and craftsmanship on every project, large or small."
    columns={3}
    items={[
      {
        title: 'Experienced Team',
        description:
          'Our professionals bring years of industry experience and specialized knowledge to every project we undertake.',
        icon: 'tabler:users',
      },
      {
        title: 'Quality Equipment',
        description:
          'We utilize modern, well-maintained equipment and premium materials to ensure superior results that stand the test of time.',
        icon: 'tabler:bulldozer',
      },
      {
        title: 'Comprehensive Services',
        description:
          'From concept to completion, we offer a complete range of services to handle every aspect of your outdoor project.',
        icon: 'tabler:list-check',
      },
      {
        title: 'Custom Solutions',
        description:
          'Every property is unique, which is why we tailor our approach to your specific needs, preferences, and site conditions.',
        icon: 'tabler:adjustments',
      },
      {
        title: 'Transparent Process',
        description:
          'We provide clear communication, detailed estimates, and regular updates throughout your project for complete peace of mind.',
        icon: 'tabler:file-description',
      },
      {
        title: 'Customer Satisfaction',
        description:
          'Our commitment to excellence and attention to detail ensures your complete satisfaction with the finished result.',
        icon: 'tabler:thumb-up',
      },
    ]}
  />

  <!-- Steps Widget -->
  <Steps
    id="steps"
    tagline="Our Process"
    title="How We Work"
    subtitle="We follow a structured process to ensure your project is completed on time, within budget, and to your satisfaction."
    items={[
      {
        title: 'Consultation',
        description:
          'We begin with a thorough consultation to understand your needs, preferences, and project goals.',
        icon: 'tabler:message',
      },
      {
        title: 'Site Assessment',
        description:
          'Our team conducts a detailed site assessment to evaluate conditions and determine the best approach for your project.',
        icon: 'tabler:map',
      },
      {
        title: 'Project Planning',
        description:
          'We develop a comprehensive project plan, including timelines, materials, and costs, ensuring transparency and clarity.',
        icon: 'tabler:clipboard-list',
      },
      {
        title: 'Execution',
        description:
          'Our skilled team executes the project with precision, adhering to the highest standards of quality and safety.',
        icon: 'tabler:hammer',
      },
      {
        title: 'Final Inspection',
        description:
          'We conduct a final inspection to ensure every detail meets our quality standards and your expectations.',
        icon: 'tabler:check',
      },
      {
        title: 'Follow-Up',
        description:
          'After project completion, we follow up to ensure your satisfaction and address any questions or concerns.',
        icon: 'tabler:phone-check',
      },
    ]}
    image={{
      src: '~/assets/images/services/sod/sod-service-main.png',
      alt: 'Legacy Exteriors excavation services',
    }}
  />
  <!-- Testimonials Widget ********** -->

  <!-- CallToAction Widget *********** -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Request a Free Quote',
        href: '/contact',
        icon: 'tabler:message',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Start Your <br class="block sm:hidden" /><span class="sm:whitespace-nowrap">Outdoor Project?</span>
    </Fragment>

    <Fragment slot="subtitle">
      Contact us today to schedule a consultation and discover how our professional services can enhance your property.
    </Fragment>
  </CallToAction>
</Layout>
