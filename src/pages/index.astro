---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Image from '~/components/common/Image.astro';
import Services from '~/components/widgets/Services.astro';
import CompanyValues from '~/components/widgets/CompanyValues.astro';
import OurWork from '~/components/widgets/OurWork.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';

const metadata = {
  title: 'Legacy Exteriors | Professional Excavation Services in Windsor, Ontario',
  ignoreTitleTemplate: true,
  description:
    'Expert excavation, trenching, drainage, and site preparation services in Windsor-Essex. Trusted contractor since 2022. Free estimates available.',
  openGraph: {
    type: 'website',
    locale: 'en_CA',
    url: 'https://legacyexteriors.ca',
    siteName: 'Legacy Exteriors',
    title: 'Legacy Exteriors | Professional Excavation Services in Windsor, Ontario',
    description:
      'Expert excavation, trenching, drainage, and site preparation services. Trusted Windsor contractor since 2022. Free estimates available.',
    images: [
      {
        url: '~/assets/images/about/legacy-exteriors-equipment-line.png',
        width: 1200,
        height: 630,
        alt: 'Legacy Exteriors - Professional Excavation Services',
      },
    ],
  },
  canonical: 'https://legacyexteriorsinc.com',
};

const heroImages = [
  {
    src: '~/assets/images/projects/basement-walkout-finished.png',
    alt: 'Basement Walkout Completed',
  },
  {
    src: '~/assets/images/projects/soil-graded-and-levelled-windsor-sod.png',
    alt: 'Levelled Soil for Sod Installation',
  },
  {
    src: '~/assets/images/projects/sodded-lawn-complete.png',
    alt: 'Sodded Lawn Completed',
  },
];
---

<Layout metadata={metadata}>
  <Hero2
    tagline="Windsor's Excavation Experts"
    title="Transform Your Property with <span class='text-primary'>Professional</span> Excavation"
    subtitle="From sod installation and landscaping, to drainage systems, basement walk-outs, driveways, and more, Legacy Exteriors delivers precise excavation solutions that exceed expectations. Serving Windsor-Essex with integrity and quality."
    showReviews={true}
    reviewsRating={5}
    reviewsCount={28}
    actions={[
      {
        variant: 'primary',
        text: 'Get a Free Estimate',
        href: '/contact',
      },
      {
        variant: 'secondary',
        text: 'View Our Projects',
        href: '/work',
      },
    ]}
    images={heroImages}
  >
    <!-- Background -->
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-black opacity-70 z-10"></div>
      <video class="absolute inset-0 w-full h-full object-cover" autoplay muted loop playsinline>
        <source src="/images/375622756_9968442169894441_7438767060446748338_n_1.mp4" type="video/mp4" />
        <!-- Fallback image in case video doesn't load -->
        <Image
          src="/images/hero-mainv2.png"
          alt="Excavation services background"
          class="absolute inset-0 w-full h-full object-cover"
        />
      </video>
    </Fragment>
  </Hero2>

  <!-- Services Widget ******************* -->
  <Services
    tagline="Our Expertise"
    title="Professional Excavation & Landscaping Services"
    subtitle="From foundation excavation to landscape design, we provide comprehensive solutions that transform properties with precision and care."
    columns={3}
    highlight={true}
    services={[
      {
        title: 'Expert Excavation',
        description:
          'Full-service excavation solutions for residential and commercial projects. Our skilled operators handle site preparation, foundation digging, grading, and land clearing with precision equipment.',
        image: '~/assets/images/services/excavation/excavation-services-main.png',
        icon: 'tabler:bulldozer',
        callToAction: {
          text: 'Explore Excavation',
          href: '/services/excavation',
          icon: 'tabler:arrow-right',
        },
      },
      {
        title: 'Precision Trenching',
        description:
          'Professional trenching services for utility lines, irrigation systems, and drainage installations. We ensure accurate depth and grade while minimizing disruption to your existing landscape.',
        image: '~/assets/images/services/trenching/trenching-services-main.png',
        icon: 'tabler:line-dashed',
        callToAction: {
          text: 'Explore Trenching',
          href: '/services/trenching',
          icon: 'tabler:arrow-right',
        },
      },
      {
        title: 'Drainage Solutions',
        description:
          'Comprehensive drainage systems tailored to protect your property. We design and install French drains, catch basins, swales, and complete water management solutions.',
        image: '~/assets/images/services/drainage/drainage-service-main.png',
        icon: 'tabler:droplet',
        callToAction: {
          text: 'Explore Drainage',
          href: '/services/drainage',
          icon: 'tabler:arrow-right',
        },
      },
      {
        title: 'Driveway Construction',
        description:
          'Premium driveway installation and renovation services. From excavation to finishing, we work with concrete, asphalt, and interlocking pavers to create durable, attractive entrances.',
        image: '~/assets/images/services/driveways/driveway-service-main.png',
        icon: 'tabler:road',
        callToAction: {
          text: 'Explore Driveways',
          href: '/services/driveways',
          icon: 'tabler:arrow-right',
        },
      },
      {
        title: 'Professional Landscaping',
        description:
          'Transform your outdoor space with our complete landscape design and installation services. We create harmonious environments using quality plants, trees, and hardscape elements.',
        image: '~/assets/images/services/landscaping/landscaping-service-main.png',
        icon: 'tabler:plant',
        callToAction: {
          text: 'Explore Landscaping',
          href: '/services/landscaping',
          icon: 'tabler:arrow-right',
        },
      },
      {
        title: 'Sod Installation',
        description:
          'Achieve an instant, lush lawn with our professional sod installation service. We handle proper soil preparation, premium sod selection, and provide maintenance guidance for lasting results.',
        image: '~/assets/images/services/sod/sod-service-main.png',
        icon: 'tabler:garden-cart',
        callToAction: {
          text: 'Explore Sod',
          href: '/services/sod-installation',
          icon: 'tabler:arrow-right',
        },
      },
    ]}
    viewAllButton={{
      enabled: true,
      text: 'View All Services',
      href: '/services',
      icon: 'tabler:arrow-right',
    }}
  />

  <!-- Company Values Widget ********** -->
  <CompanyValues
    tagline="About Legacy Exteriors"
    title="Built on 30 Years of Family Expertise"
    subtitle="Where precision meets dedication in every excavation project."
    companyDescription="At Legacy Exteriors, excavation runs in the family. What began over 30 years ago  a fathers commitment to hard work and quality craftsmanship has evolved into a trusted name for excavation solutions across Windsor-Essex. Today, Legacy Exteriors carries that tradition forward-combining decades of experience with modern precision to deliver outstanding results for homeowners and businesses alike.<br><br>Our dedication to excellence goes beyond the job site. We build lasting relationships through clear communication, professional service, and top-tier workmanship. Every project is a reflection of our family's commitment to doing the job right-and exceeding expectations."
    googleRating={{
      score: 5,
      count: 28,
    }}
    values={[
      {
        title: 'Quality Craftsmanship',
        description:
          'Excellence is non-negotiable. From initial consultation to project completion, we maintain the highest standards in equipment, materials, and craftsmanship.',
        icon: 'tabler:premium-rights',
      },
      {
        title: 'Safety First',
        description:
          'We prioritize safety above all else. Our team follows strict protocols to protect your property, our workers, and your family throughout every project.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Professional Integrity',
        description:
          'Honesty and transparency guide every interaction. We provide clear timelines, accurate estimates, and regular updates to keep you informed and confident.',
        icon: 'tabler:certificate',
      },
      {
        title: 'Precision Execution',
        description:
          'Every detail matters. Our experienced operators use advanced equipment and proven techniques to ensure precise results that meet exact specifications.',
        icon: 'tabler:target',
      },
    ]}
    ownerName="Alexander Orton-Meunier"
    ownerTitle="Founder & Owner"
    image="~/assets/images/about/alex-orton-selfie.png"
    callToAction={{
      text: 'Learn More About Us',
      href: '/about',
      icon: 'tabler:arrow-right',
      variant: 'primary',
    }}
    bg="<div class='absolute inset-0 bg-gradient-to-br from-green-900/20 via-transparent to-green-900/20'></div>"
  />

  <!-- OurWork Widget -->
  <OurWork
    tagline="Portfolio"
    title="Our Recent Projects"
    subtitle="Explore some of our finest landscaping and excavation work."
    callToAction={{
      text: 'View All Projects',
      href: '/our-work',
      icon: 'tabler:arrow-right',
      variant: 'primary',
    }}
  />

  <!-- HighlightedPosts Widget ******* -->
  <BlogLatestPosts
    title="Our Latest Articles"
    information="We post regularly about our services, showcase our work, and provide tips for homeowners and contractors. Stay informed and inspired with our latest articles."
  />

  <!-- Testimonials Widget ********* -->
  <Testimonials
    tagline="Customer Reviews"
    title="What Our Clients Say"
    subtitle="Don't just take our word for it. Here's what our satisfied customers have to say about our landscaping and excavation services."
    googleBranding={true}
    totalReviews={{
      count: 28,
      average: 5,
    }}
    reviewUrl="https://g.page/r/your-google-review-link"
    testimonials={[
      {
        name: 'Adam',
        job: 'Homeowner',
        testimonial:
          'Amazing experience with Alex having him remove an old concrete pad. Bro knows how to use a Bobcat. He definitely went above and beyond with attention to detail and cleaning up the site. Plus he blew my mind by handing me a branded spice mix instead of a business card. 10/10 would hire again.',
        rating: 5,
        date: 'July 22, 2024',
        verifiedCustomer: true,
        highlight: true,
      },
      {
        name: 'Julia Danes',
        job: 'Homeowner',
        testimonial:
          'Alex and Ramy were an absolute pleasure to deal with! Courteous, pleasant, professional and cleaned up after their respective jobs. Cement driveway looks absolutely fabulous. I would definitely recommend and use again!! Well done fellas!',
        rating: 5,
        date: 'August 15, 2024',
        verifiedCustomer: true,
      },
      {
        name: 'Ebhrahim Shaikh',
        testimonial:
          'I had the great pleasure of dealing with Alex. He is very passionate about his work and delivered on time with great detail to perfection. He is an asset to the business community and I would love to see him grow. Just to put things into context, even though it was likely the hottest day of the year, he knew the urgency of my work and lived up to his word and completed my project on time. Thanks for the amazing experience And I will highly recommend you!',
        rating: 5,
        date: 'June 26, 2024',
        verifiedCustomer: true,
      },
      {
        name: 'Bob Woodward',
        job: 'Homeowner',
        testimonial:
          'Legacy exteriors did an amazing job for me transforming my backyard without the pool anymore we can enjoy the beauty of their workmanship friendly and professional they are 10 out of 10 in our books thank you Legacy for such a beautiful job.',
        rating: 5,
        date: 'June 14, 2024',
        verifiedCustomer: true,
      },
      {
        name: 'Ashley Emans',
        testimonial:
          'Excellent service! Very accommodating. Positives: Responsiveness, Punctuality, Quality, Professionalism, Value',
        rating: 5,
        date: 'August 29, 2022',
        verifiedCustomer: true,
      },
      {
        name: 'Nick Kelly',
        job: 'Homeowner',
        testimonial:
          'Alex went out of his way to make sure I was happy with his services and I was very impressed by his workmanship. He made the process simple and painless from start to finish. Would definitely recommend.',
        rating: 5,
        date: 'Jun 13, 2023',
        highlight: true,
        verifiedCustomer: true,
      },
    ]}
    bg="<div class='absolute inset-0 bg-gradient-to-br from-green-900/20 via-transparent to-green-900/20'></div>"
  />

  <!-- CallToAction Widget - Service Range -->
  <CallToAction
    tagline="Complete Solutions"
    backgroundImage="~/assets/images/projects/concrete-foundation-home-excavation.png"
    showLeaves={false}
    overlayOpacity={0.7}
    actions={[
      {
        variant: 'primary',
        text: 'Explore Our Services',
        href: '/services',
        icon: 'tabler:list-check',
      },
      {
        variant: 'secondary',
        text: 'Free Consultation',
        href: '/contact',
        icon: 'tabler:message',
      },
    ]}
    isDark={true}
  >
    <Fragment slot="title">Excavation • Drainage • Grading • Site Prep</Fragment>
    <Fragment slot="subtitle">
      One contractor for all your groundwork needs. From foundation excavation to complete landscape transformation,
      Legacy Exteriors delivers comprehensive solutions with 5-star service.
    </Fragment>
  </CallToAction>
</Layout>
