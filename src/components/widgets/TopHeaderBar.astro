---
import { Icon } from 'astro-icon/components';
import Button from '~/components/ui/Button.astro';
import { SITE } from 'astrowind:config';
---

<div class="bg-page py-4 px-4 border-b border-gray-800 hidden md:block">
  <div class="max-w-7xl mx-auto grid grid-cols-3 items-center">
    <!-- Logo -->
    <div class="flex justify-start">
      <img 
        src="/images/legacy-exteriors-main-logo.png" 
        alt={SITE?.name || 'Legacy Exteriors'} 
        class="size-40" 
        loading="eager"
      />
    </div>
    
    <!-- Contact Information -->
    <div class="flex flex-col items-center justify-center space-y-2 text-default">
      <div class="flex items-center">
        <Icon name="tabler:phone" class="w-5 h-5 mr-2 text-primary" />
        <span class="font-medium">(555) 555-5555</span>
      </div>
      <div class="flex items-center">
        <Icon name="tabler:mail" class="w-5 h-5 mr-2 text-primary" />
        <span class="font-medium">info@legacyexteriors.com</span>
      </div>
    </div>
    
    <!-- CTA & Social -->
    <div class="flex flex-col items-end justify-center space-y-3">
      <Button variant="primary">Get a Free Quote</Button>
      <div class="flex space-x-3">
        <a href="#" aria-label="Facebook" class="text-muted hover:text-primary">
          <Icon name="tabler:brand-facebook" class="w-6 h-6" />
        </a>
        <a href="#" aria-label="Instagram" class="text-muted hover:text-primary">
          <Icon name="tabler:brand-instagram" class="w-6 h-6" />
        </a>
        <a href="#" aria-label="LinkedIn" class="text-muted hover:text-primary">
          <Icon name="tabler:brand-linkedin" class="w-6 h-6" />
        </a>
      </div>
    </div>
  </div>
</div>